<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
     <RelativeLayout 
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/layout_bg"
        android:id="@+id/minigame_container"
         >
         	<View
         	    android:layout_height="match_parent"
         	    android:layout_width="30dp"
         	    android:id="@+id/minigame_target"
         	    android:background="#FF0000"

         	    ></View>
         	<View
         	    android:layout_height="match_parent"
         	    android:layout_width="15dp"
         	    android:id="@+id/minigame_player"
         	    android:background="#FFFFFF"
         	    ></View>
     </RelativeLayout>
     <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="200dp"
         android:orientation="horizontal"
         android:layout_above="@id/minigame_container"
         android:layout_alignLeft="@id/minigame_container"
         android:background="@drawable/layout_bg"
         >
         	<TextView
         	    android:layout_height="wrap_content"
         	    android:layout_width="wrap_content"
         	    android:textSize="20sp"
         	    android:textStyle="bold"
         	    android:textColor="#FFFFFF"
         	    android:layout_marginLeft="10dp"
         	    android:id="@+id/minigame_score_label"
         	    android:text="@string/score"
         	    >
         	    
         	</TextView>
         	<TextView 
         	    android:layout_height="wrap_content"
         	    android:layout_width="wrap_content"
         	    android:id="@+id/minigame_score"
         	    android:textSize="20sp"
         	    android:textStyle="bold"
         	    android:textColor="#FFFFFF"
         	    android:layout_marginLeft="5dp"
         	    />
         	<Button
         	    android:layout_height="wrap_content"
         	    android:layout_width="wrap_content"
         	    android:text="@string/help"
         	    android:id="@+id/minigame_help"
         	    ></Button>
         	</LinearLayout>

</RelativeLayout>